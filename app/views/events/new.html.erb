<script type="text/javascript">
$(document).ready(function(){
    $('.fdatepicker').fdatepicker({
      format: 'yyyy-mm-dd'
    });
  });
</script>

New Event

<%= form_for @event do |f|%>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_field :time, class: "fdatepicker" %>
  </div>
  
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>

  <div class="actions">
    <%= f.submit "New" %>
  </div>
<% end %>

